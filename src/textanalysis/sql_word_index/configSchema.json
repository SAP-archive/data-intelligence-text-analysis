{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "$id": "http://sap.com/vflow/textanalysis.sql_word_index.configSchema.json",
    "type": "object",
    "properties": {
        "codelanguage": {
            "type": "string"
        },
        "script": {
            "type": "string"
        },
        "debug_mode": {
            "title": "Debug mode",
            "description": "Sending debug level information to log port",
            "type": "boolean"
        },
        "language": {
            "title": "Language",
            "description": "Language for which the index should be created.",
            "type": "string"
        },
        "text_id_col": {
            "title": "Text_id column",
            "description": "Name of text_id column",
            "type": "string"
        },
        "table_name": {
            "title": "Table name",
            "description": "Name of table",
            "type": "string"
        },
        "type_limit_map": {
            "title": "Limit of each type",
            "description": "Minimum frequency of words for each type (map)",
            "type": "string"
        }
    }
}